{{!-- method="post" значит в mainRouter пишем router.post ... --}}
{{!-- удаление поста --}}
{{#if userId}}
<div class="wrapper_form">

  <form name="addPost" class="addPost" action="/add" method="post">
    <div class="addPost_card">
      <label for="name" class="form-label">Добавить Пост:</label>
	    <input class="input" required="required" type="text" name="postName" placeholder="название поста***" />
    </div>

	  <div class="addPost_card">
      <label for="name" class="form-label">Ссылка на картинку:</label>
	    <input class="input" required type="text" name="img" placeholder="вставьте ссылку***" />
    </div>

    <button class="addPost_button" type="submit">Добавить</button>
  </form>
  

{{!-- удаление поста --}}
  <div class="card">
    {{#each posts}}
      <div class="products">
        <p>{{this.title}}</p>
        <img src={{this.img}} alt="photo">
        {{#if owner}}
          <div data-dataid="{{this.id}}" class="product-inner">
            <form method="delete" action="/delete/{{this.id}}">
              <button data-type="delete" id="delete" class="products_delete-btn">Удалить</button>
            </form>
          </div>
        {{else}}

        {{/if}}
      </div>
    {{/each}}
  </div>

</div>
{{/if}}
